.site-footer {
  background-color: #f2f2f2;
  padding: 20px;
  z-index: 999;
}

.footer-nav {
  display: inline-block;
  font-size: 16px;
}

.footer-link {
  float: left;
  width: 80px;
  height: 30px;
  line-height: 30px;
  margin-right: 6px;
  border: #d0d0d0 1px solid;
  text-align: center;
  color: #333;
  background-color: #FFF;
}

.footer-nav p {
  margin-left: 180px;
  height: 30px;
  line-height: 30px;
  color: #333;
}